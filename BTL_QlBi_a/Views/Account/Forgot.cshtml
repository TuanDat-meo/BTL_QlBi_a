@* Forgot.cshtml *@
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quên Mật Khẩu - Quản Lý Quán Bi-a Pro</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-container {
            background: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .login-header h1 {
                color: #333;
                font-size: 28px;
                margin-bottom: 10px;
            }

            .login-header p {
                color: #666;
                font-size: 14px;
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                color: #333;
                font-weight: 500;
            }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
            transition: border-color 0.3s;
        }

            .form-control:focus {
                outline: none;
                border-color: #667eea;
            }

        .btn-login {
            width: 100%;
            padding: 12px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s;
        }

            .btn-login:hover {
                transform: translateY(-2px);
            }

            .btn-login:active {
                transform: translateY(0);
            }

        .error-message, .success-message {
            padding: 12px;
            border-radius: 5px;
            margin-bottom: 20px;
            text-align: center;
            font-size: 14px;
        }

        .error-message {
            background: #fee;
            color: #c33;
        }

        .success-message {
            background: #e6ffe6;
            color: #1a7a1a;
        }

        .login-footer {
            text-align: center;
            margin-top: 20px;
            color: #666;
            font-size: 13px;
        }

        .form-link {
            display: block;
            text-align: center;
            margin-top: 15px;
            color: #667eea;
            text-decoration: none;
            font-size: 14px;
        }

            .form-link:hover {
                text-decoration: underline;
            }

    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <h1>🔑 Quên Mật Khẩu</h1>
            <p>Nhập email để nhận mã xác nhận (OTP)</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="error-message">
                @ViewBag.Error
            </div>
        }

        @if (ViewBag.Success != null)
        {
            <div class="success-message">
                @ViewBag.Success
            </div>
        }

        <form asp-action="ForgotPassword" method="post">
            <div class="form-group">
                <label for="email">Email đã đăng ký</label>
                <input type="email" class="form-control" id="email" name="email"
                       placeholder="Nhập email của bạn" required>
            </div>

            <button type="submit" class="btn-login">Gửi mã xác nhận</button>
        </form>

        <a href="/Account/Login" class="form-link">Quay lại trang Đăng nhập</a>

        <div class="login-footer">
            <p>© 2025 Quản Lý Quán Bi-a Pro. All rights reserved.</p>
        </div>
    </div>
</body>
</html>
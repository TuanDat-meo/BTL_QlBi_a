@using Microsoft.AspNetCore.Http
@using BTL_QlBi_a.Models.Entities
@{
    // THÊM: Kiểm tra session MaNV. Nếu null, redirect về trang Login.
    if (Context.Session.GetInt32("MaNV") == null)
    {
        Context.Response.Redirect("/Account/Login"); // Chặn truy cập nếu chưa đăng nhập
        return;
    }
    // Lấy thông tin từ session để hiển thị trên layout
    ViewBag.TenNV = Context.Session.GetString("TenNV");
    ViewBag.ChucVu = Context.Session.GetString("ChucVu");
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Quản Lý Quán Bi-a Pro</title>
    <link rel="stylesheet" href="~/asset/css/index.css" asp-append-version="true">
</head>
<body>
    <header class="header">
        <div class="header-top">
            <div class="header-title">
                <h1>🎱 Quản Lý Quán Bi-a Pro</h1>
            </div>
            <div class="user-info">
                <div class="user-details">
                    <div class="user-name">@(ViewBag.TenNV ?? "Nhân viên")</div>
                    <div class="user-role">@(ViewBag.ChucVu ?? "Nhân viên")</div>
                </div>
                <div class="user-avatar">@(ViewBag.ChucVu?.Substring(0, 1) ?? "NV")</div>
                <button class="logout-btn" onclick="logout()">Đăng xuất</button>
            </div>
        </div>

        <div class="stats-dashboard">
            <div class="stat-card">
                <div class="stat-value" id="availableTables">@(ViewBag.BanTrong ?? 0)</div>
                <div class="stat-label">Bàn Trống</div>
                <div class="stat-trend">↑ 2 bàn so với 1h trước</div>
            </div>
            <div class="stat-card">
                <div class="stat-value" id="occupiedTables">@(ViewBag.BanDangChoi ?? 0)</div>
                <div class="stat-label">Đang Chơi</div>
                <div class="stat-trend down">↓ 1 bàn</div>
            </div>
            <div class="stat-card">
                <div class="stat-value" id="reservedTables">@(ViewBag.BanDaDat ?? 0)</div>
                <div class="stat-label">Đặt Trước</div>
                <div class="stat-trend">→ Không đổi</div>
            </div>
            <div class="stat-card">
                <div class="stat-value" id="todayRevenue">@(ViewBag.DoanhThuHomNay ?? "0đ")</div>
                <div class="stat-label">Doanh Thu Hôm Nay</div>
                <div class="stat-trend">↑ +15% so với hôm qua</div>
            </div>
            <div class="stat-card">
                <div class="stat-value" id="totalCustomers">@(ViewBag.TongKhachHang ?? 0)</div>
                <div class="stat-label">Khách Hàng</div>
                <div class="stat-trend">↑ 3 khách mới</div>
            </div>
        </div>
    </header>

    <div class="container">
        <aside class="sidebar" id="sidebar">
            <button class="menu-toggle" onclick="toggleSidebar()">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
            </button>
            <div class="sidebar-header">
                <svg class="sidebar-logo" width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="3" y1="12" x2="21" y2="12"></line>
                    <line x1="3" y1="6" x2="21" y2="6"></line>
                    <line x1="3" y1="18" x2="21" y2="18"></line>
                </svg>
                <div class="sidebar-title">Menu</div>
            </div>
            <ul class="nav-menu">
                <li class="nav-item">
                    <a class="nav-link active" onclick="showPage('tables')" data-tooltip="Quản lý bàn">
                        <div class="nav-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                            </svg>
                        </div>
                        <span class="nav-text">Quản lý bàn</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" onclick="showPage('menu')" data-tooltip="Dịch vụ & Menu">
                        <div class="nav-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"></path>
                            </svg>
                        </div>
                        <span class="nav-text">Dịch vụ & Menu</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" onclick="showPage('invoices')" data-tooltip="Hóa đơn">
                        <div class="nav-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                            </svg>
                        </div>
                        <span class="nav-text">Hóa đơn</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" onclick="showPage('customers')" data-tooltip="Khách hàng">
                        <div class="nav-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                <circle cx="12" cy="7" r="4"></circle>
                            </svg>
                        </div>
                        <span class="nav-text">Khách hàng</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" onclick="showPage('statistics')" data-tooltip="Thống kê">
                        <div class="nav-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <line x1="18" y1="20" x2="18" y2="10"></line>
                                <line x1="12" y1="20" x2="12" y2="4"></line>
                                <line x1="6" y1="20" x2="6" y2="14"></line>
                            </svg>
                        </div>
                        <span class="nav-text">Thống kê</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" onclick="showPage('pricing')" data-tooltip="Bảng giá">
                        <div class="nav-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <line x1="12" y1="1" x2="12" y2="23"></line>
                                <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                            </svg>
                        </div>
                        <span class="nav-text">Bảng giá</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" onclick="showPage('staff')" data-tooltip="Nhân viên">
                        <div class="nav-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                <circle cx="9" cy="7" r="4"></circle>
                                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                            </svg>
                        </div>
                        <span class="nav-text">Nhân viên</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" onclick="showPage('settings')" data-tooltip="Cài đặt">
                        <div class="nav-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="3"></circle>
                                <path d="M12 1v6m0 6v6m9-9h-6m-6 0H3"></path>
                            </svg>
                        </div>
                        <span class="nav-text">Cài đặt</span>
                    </a>
                </li>
            </ul>
        </aside>

        <main class="content-area">
            @RenderBody()
        </main>

        <aside class="right-panel">
            <div class="detail-panel">
                <div class="panel-header">
                    <h3 class="panel-title">Chi tiết</h3>
                </div>
                <div class="panel-body" id="detailPanel">
                    <div class="empty-state">
                        <div class="empty-icon">📋</div>
                        <div class="empty-text">Chọn một bàn để xem chi tiết</div>
                    </div>
                </div>
            </div>
        </aside>
    </div>

    <div class="modal-overlay" id="modalOverlay">
        <div class="modal">
            <div class="modal-header">
                <h3 class="modal-title" id="modalTitle">Modal</h3>
                <button class="close-btn" onclick="closeModal()">✕</button>
            </div>
            <div id="modalContent">
            </div>
        </div>
    </div>

    <script src="~/asset/js/sidebar.js" asp-append-version="true"></script>
    <script>
        function logout() {
            if (confirm('Bạn có chắc muốn đăng xuất?')) {
                fetch('/Account/Logout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => {
                    window.location.href = '/Account/Login';
                })
                .catch(error => {
                    console.error('Error:', error);
                    window.location.href = '/Account/Login';
                });
            }
        }

        function closeModal() {
            document.getElementById('modalOverlay').classList.remove('active');
        }

        function showPage(pageId) {
            console.log('Showing page:', pageId);
        // Implement page switching logic here
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
@using Microsoft.AspNetCore.Http
@using BTL_QlBi_a.Models.Entities
@{
    // Kiểm tra session MaNV
    if (Context.Session.GetInt32("MaNV") == null)
    {
        Context.Response.Redirect("/Account/Login");
        return;
    }
    ViewBag.TenNV = Context.Session.GetString("TenNV");
    ViewBag.ChucVu = Context.Session.GetString("ChucVu");
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Quản Lý Quán Bi-a Pro</title>
    <link rel="stylesheet" href="~/asset/css/index.css" asp-append-version="true">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @* Header với Stats Dashboard *@
    @await Html.PartialAsync("_Header")

    <div class="container">
        @* Sidebar Navigation *@
        @await Html.PartialAsync("_Sidebar")

        @* Main Content Area *@
        <main class="content-area">
            @RenderBody()
        </main>

        @* Right Panel - Chi tiết *@
        <aside class="right-panel">
            <div class="detail-panel">
                <div class="panel-header">
                    <h3 class="panel-title">Chi tiết</h3>
                </div>
                <div class="panel-body" id="detailPanel">
                    <div class="empty-state">
                        <div class="empty-icon">📋</div>
                        <div class="empty-text">Chọn một bàn để xem chi tiết</div>
                    </div>
                </div>
            </div>
        </aside>
    </div>

    @* Modal Overlay *@
    @await Html.PartialAsync("_Modal")

    <script src="~/asset/js/sidebar.js" asp-append-version="true"></script>
    <script src="~/asset/js/common.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
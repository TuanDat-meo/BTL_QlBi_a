<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CLB Bi-a Pro</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <style>
        /* CSS Inline tạm thời cho giao diện tối màu (Dark Theme) */
        :root {
            --primary-color: #00f2fe;
            --secondary-color: #4facfe;
            --bg-dark: #1a1a2e;
            --card-bg: #16213e;
        }
        body { background-color: var(--bg-dark); color: white; font-family: sans-serif; }
        .navbar { background: rgba(26, 26, 46, 0.95); border-bottom: 1px solid #2a2a4e; }
        .navbar-brand {
            font-weight: 800;
            background: -webkit-linear-gradient(var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        .nav-link { color: #fff !important; }
        .nav-link:hover { color: var(--primary-color) !important; }
        footer { background-color: #0f3460; padding: 20px 0; margin-top: 50px; text-align: center; color: #ccc; }


        /* --- STYLE CHO TAB --- */
.nav-pills .nav-link {
    background-color: rgba(255, 255, 255, 0.1);
    color: #ccc;
    margin: 0 5px;
    border: 1px solid transparent;
    transition: all 0.3s;
}

.nav-pills .nav-link.active, .nav-pills .nav-link:hover {
    background-color: var(--primary-color); /* Màu xanh neon */
    color: #000;
    font-weight: bold;
    box-shadow: 0 0 15px var(--primary-color);
}

/* --- STYLE CHO CARD BÀN --- */
.table-card {
    background-color: #16213e;
    border: none;
    border-radius: 15px;
    overflow: hidden;
    transition: transform 0.3s;
}

.table-card:hover {
    transform: translateY(-5px);
}

.glow-border {
    border: 1px solid var(--primary-color);
    box-shadow: 0 0 10px rgba(0, 242, 254, 0.2);
}

/* Xử lý ảnh */
.card-img-wrapper {
    position: relative;
    height: 180px; /* Chiều cao cố định cho ảnh */
    overflow: hidden;
}

.card-img-top {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Quan trọng: Cắt ảnh để vừa khung mà không méo */
    transition: transform 0.5s;
}

.table-card:hover .card-img-top {
    transform: scale(1.1); /* Zoom ảnh khi hover */
}

/* Badge giá tiền & trạng thái */
.price-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background: rgba(0, 0, 0, 0.8);
    color: #ffd700; /* Màu vàng kim */
    padding: 5px 10px;
    border-radius: 8px;
    font-weight: bold;
    font-size: 0.85rem;
    border: 1px solid #ffd700;
}

.status-badge {
    position: absolute;
    bottom: 10px;
    left: 10px;
    padding: 4px 12px;
    border-radius: 20px;
    color: white;
    font-size: 0.8rem;
    font-weight: 600;
    box-shadow: 0 2px 5px rgba(0,0,0,0.5);
}
    </style>

@await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/Users">🎱 BI-A PRO CLUB</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item"><a class="nav-link" href="/Users">Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link" href="#tables">Bàn chơi</a></li>

                    <li class="nav-item"><a class="nav-link" href="#member">Tra cứu</a></li>

                                    @if (Context.Session.GetInt32("MaKH") != null)
                                    {
                                        // TRƯỜNG HỢP 1: ĐÃ ĐĂNG NHẬP
                            <li class="nav-item dropdown ms-3">
                                <a class="nav-link dropdown-toggle btn btn-outline-light border-0" href="#" role="button" data-bs-toggle="dropdown">
                                                @* Hiển thị Avatar nhỏ nếu có *@
                                    <i class="fa-solid fa-circle-user me-1"></i>
                                    Xin chào, @Context.Session.GetString("TenKH")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark">
                                    <li><a class="dropdown-item" href="#">Hồ sơ cá nhân</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fa-solid fa-right-from-bracket me-2"></i>Đăng xuất
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                                    }
                                    else
                                    {
                                        // TRƯỜNG HỢP 2: CHƯA ĐĂNG NHẬP (KHÁCH VÃNG LAI)
                            <li class="nav-item ms-3">
                                <a class="btn btn-outline-info me-2" href="/Account/Login">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary" href="/Account/Signup">Đăng ký</a>
                            </li>
                                    }
                </ul>
            </div>
        </div>
    </nav>

    <div style="margin-top: 70px; min-height: 80vh;">
        @RenderBody()
    </div>

    <footer>
        <div class="container">
            &copy; 2025 - CLB Bi-a Pro - Design by Những kẻ nghiện Bi a
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
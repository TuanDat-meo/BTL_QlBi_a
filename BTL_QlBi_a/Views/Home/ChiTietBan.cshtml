@model BTL_QlBi_a.Models.Entities.BanBia
@{
    var hoaDon = ViewBag.HoaDon as BTL_QlBi_a.Models.Entities.HoaDon;
    var chiTiet = ViewBag.ChiTietDichVu as List<BTL_QlBi_a.Models.Entities.ChiTietHoaDon>;

    string statusBadgeClass = Model.TrangThai switch
    {
        BTL_QlBi_a.Models.Entities.TrangThaiBan.Trong => "status-badge available",
        BTL_QlBi_a.Models.Entities.TrangThaiBan.DangChoi => "status-badge occupied",
        BTL_QlBi_a.Models.Entities.TrangThaiBan.DaDat => "status-badge reserved",
        _ => "status-badge"
    };

    string statusText = Model.TrangThai switch
    {
        BTL_QlBi_a.Models.Entities.TrangThaiBan.Trong => "Trống",
        BTL_QlBi_a.Models.Entities.TrangThaiBan.DangChoi => "Đang chơi",
        BTL_QlBi_a.Models.Entities.TrangThaiBan.DaDat => "Đã đặt",
        _ => Model.TrangThai.ToString()
    };
}

<div class="detail-header">
    <h3 class="detail-title">@Model.TenBan</h3>
    <span class="@statusBadgeClass">@statusText</span>
</div>

<div class="detail-body">
    @if (Model.TrangThai == BTL_QlBi_a.Models.Entities.TrangThaiBan.DangChoi && hoaDon != null)
    {
        <div class="info-section">
            <div class="info-row">
                <span class="info-label">Khách hàng:</span>
                <span class="info-value">@(hoaDon.KhachHang?.TenKH ?? "Khách lẻ")</span>
            </div>

            @if (hoaDon.KhachHang != null)
            {
                <div class="info-row">
                    <span class="info-label">SĐT:</span>
                    <span class="info-value">@hoaDon.KhachHang.SDT</span>
                </div>
            }

            <div class="info-row">
                <span class="info-label">Bắt đầu:</span>
                <span class="info-value">@hoaDon.ThoiGianBatDau.Value.ToString("HH:mm")</span>
            </div>

            @{
                var duration = DateTime.Now - hoaDon.ThoiGianBatDau;
                var soPhutLamTron = Math.Ceiling(duration.Value.TotalMinutes / 15) * 15;
                var soGio = soPhutLamTron / 60;
                var tienBanUocTinh = Model.LoaiBan != null ? Model.LoaiBan.GiaGio * (decimal)soGio : 0;
            }

            <div class="info-row">
                <span class="info-label">Thời gian:</span>
                <span class="info-value time-highlight">@((int)duration.Value.TotalHours)h @(duration.Value.Minutes)m</span>
            </div>
        </div>

        <div class="bill-section">
            <div class="bill-row">
                <span>Tiền bàn:</span>
                <span>@tienBanUocTinh.ToString("N0") đ</span>
            </div>

            @if (chiTiet != null && chiTiet.Any())
            {
                var tongDichVu = chiTiet.Sum(ct => ct.ThanhTien ?? 0);
                <div class="bill-row">
                    <span>Dịch vụ:</span>
                    <span>@tongDichVu.ToString("N0") đ</span>
                </div>

                <div class="bill-row total">
                    <span>Tổng cộng:</span>
                    <span>@((tienBanUocTinh + tongDichVu).ToString("N0")) đ</span>
                </div>
            }
            else
            {
                <div class="bill-row">
                    <span>Dịch vụ:</span>
                    <span>0 đ</span>
                </div>

                <div class="bill-row total">
                    <span>Tổng cộng:</span>
                    <span>@tienBanUocTinh.ToString("N0") đ</span>
                </div>
            }
        </div>

        @if (chiTiet != null && chiTiet.Any())
        {
            <div class="service-section">
                <h4 class="section-subtitle">Dịch vụ đã order:</h4>
                @foreach (var item in chiTiet)
                {
                    <div class="service-item">
                        <div class="service-name">@item.DichVu?.TenDV x@item.SoLuong</div>
                        <div class="service-price">@item.ThanhTien?.ToString("N0") đ</div>
                    </div>
                }
            </div>
        }

        <div class="action-section">
            <button class="btn btn-primary btn-block" onclick="TableManager.addService(@Model.MaBan)">
                ➕ Thêm dịch vụ
            </button>
            <button class="btn btn-success btn-block" onclick="TableManager.end(@Model.MaBan)">
                Kết thúc & Thanh toán
            </button>
        </div>
    }
    else if (Model.TrangThai == BTL_QlBi_a.Models.Entities.TrangThaiBan.DaDat)
    {
        <div class="info-section">
            @if (Model.KhachHang != null)
            {
                <div class="info-row">
                    <span class="info-label">Khách hàng:</span>
                    <span class="info-value">@Model.KhachHang.TenKH</span>
                </div>
                <div class="info-row">
                    <span class="info-label">SĐT:</span>
                    <span class="info-value">@Model.KhachHang.SDT</span>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.GhiChu))
            {
                <div class="info-row">
                    <span class="info-label">Ghi chú:</span>
                    <span class="info-value">@Model.GhiChu</span>
                </div>
            }
        </div>

        <div class="action-section">
            <button class="btn btn-success btn-block" onclick="TableManager.confirmReservation(@Model.MaBan)">
                ✅ Xác nhận đặt bàn
            </button>
        </div>
    }
    else if (Model.TrangThai == BTL_QlBi_a.Models.Entities.TrangThaiBan.Trong)
    {
        <div class="info-section">
            <div class="info-row">
                <span class="info-label">Loại bàn:</span>
                <span class="info-value">@(Model.LoaiBan?.TenLoai ?? "Không rõ")</span>
            </div>
            <div class="info-row">
                <span class="info-label">Khu vực:</span>
                <span class="info-value">@(Model.KhuVuc?.TenKhuVuc ?? "Không rõ")</span>
            </div>
            <div class="info-row">
                <span class="info-label">Giá:</span>
                <span class="info-value price-highlight">@(Model.LoaiBan?.GiaGio.ToString("N0") ?? "0") đ/giờ</span>
            </div>
        </div>

        <div class="action-section">
            <button class="btn btn-success btn-block" onclick="TableManager.start(@Model.MaBan)">
                ▶️ Bắt đầu chơi
            </button>
        </div>
    }
</div>

<style>

        padding: 15px;
        margin-bottom: 20px;
    }

    .bill-row {
        display: flex;
        justify-content: space-between;
        padding: 8px 0;
        font-size: 15px;
    }

        .bill-row.total {
            border-top: 2px solid #2c3e50;
            margin-top: 10px;
            padding-top: 15px;
            font-size: 18px;
            font-weight: 700;
            color: #2c3e50;
        }

    .service-section {
        background: #f8f9fa;
        border-radius: 8px;

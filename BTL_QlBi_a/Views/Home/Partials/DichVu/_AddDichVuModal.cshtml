<div id="addServiceModal" class="modal" style="display: none;">
    <div class="modal-overlay" onclick="DichVuManager.closeModal()"></div>
    <div class="modal-content">
        <div class="dichvu-form-wrapper">
            <div class="form-header">
                <h3 class="form-title" id="modalTitle">➕ Thêm dịch vụ mới</h3>
                <button class="btn-close-form" type="button" onclick="DichVuManager.closeModal()">✖</button>
            </div>

            <form id="formDichVu" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" id="maDV" name="MaDV" />

                <div class="form-body-scroll">
                    <div class="form-section">
                        <h4 class="section-subtitle">📋 Thông tin cơ bản</h4>

                        <div class="form-group">
                            <label class="form-label">Tên dịch vụ <span class="required">*</span></label>
                            <input type="text"
                                   class="form-control"
                                   id="tenDV"
                                   name="TenDV"
                                   placeholder="Ví dụ: Cà phê sữa, Bún chả..."
                                   required />
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label">Loại dịch vụ <span class="required">*</span></label>
                                <select class="form-control" id="loai" name="Loai" required>
                                    <option value="">-- Chọn loại --</option>
                                    <option value="0">🍹 Đồ uống</option>
                                    <option value="1">🍔 Đồ ăn</option>
                                    <option value="2">📦 Khác</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label class="form-label">Trạng thái <span class="required">*</span></label>
                                <select class="form-control" id="trangThai" name="TrangThai" required>
                                    <option value="0">✅ Còn hàng</option>
                                    <option value="1">❌ Hết hàng</option>
                                    <option value="2">🚫 Ngừng kinh doanh</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label">Giá <span class="required">*</span></label>
                                <input type="number"
                                       class="form-control"
                                       id="gia"
                                       name="Gia"
                                       placeholder="0"
                                       min="0"
                                       step="1000"
                                       required />
                            </div>

                            <div class="form-group">
                                <label class="form-label">Đơn vị</label>
                                <input type="text"
                                       class="form-control"
                                       id="donVi"
                                       name="DonVi"
                                       placeholder="phần"
                                       value="phần" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Mặt hàng liên quan</label>
                            <select class="form-control" id="maHang" name="MaHang">
                                <option value="0">-- Không liên kết --</option>
                                @if (ViewBag.MatHangs != null)
                                {
                                    foreach (var matHang in ViewBag.MatHangs)
                                    {
                                        <option value="@matHang.MaHang">
                                            @matHang.TenHang (Tồn: @matHang.SoLuongTon)
                                        </option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Mô tả</label>
                            <textarea class="form-control"
                                      id="moTa"
                                      name="MoTa"
                                      rows="3"
                                      placeholder="Mô tả chi tiết về dịch vụ..."></textarea>
                        </div>
                    </div>

                    <div class="form-section">
                        <h4 class="section-subtitle">🖼️ Hình ảnh dịch vụ</h4>

                        <div class="image-upload-area" id="imageUploadArea">
                            <input type="file"
                                   id="hinhAnhFile"
                                   name="HinhAnhFile"
                                   accept="image/*"
                                   style="display: none;"
                                   onchange="DichVuManager.previewImage(this)" />

                            <div class="upload-placeholder" id="uploadPlaceholder" onclick="document.getElementById('hinhAnhFile').click()">
                                <div class="upload-icon">📷</div>
                                <p class="upload-text">Click để chọn hình ảnh</p>
                                <p class="upload-hint">Định dạng: JPG, PNG. Tối đa 5MB</p>
                            </div>

                            <div class="image-preview" id="imagePreview" style="display: none;">
                                <img id="previewImg" src="" alt="Preview" />
                                <button type="button" class="btn-remove-image" onclick="DichVuManager.removeImage()">
                                    🗑️ Xóa ảnh
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-footer">
                    <button type="button" class="btn btn-secondary" onclick="DichVuManager.closeModal()">
                        ❌ Hủy
                    </button>
                    <button type="button" class="btn btn-success" id="btnSubmit" onclick="DichVuManager.submitForm()">
                        ✅ <span id="btnSubmitText">Thêm dịch vụ</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
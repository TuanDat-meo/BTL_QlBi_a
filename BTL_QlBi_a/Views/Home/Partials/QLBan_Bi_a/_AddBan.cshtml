<div class="ban-form-wrapper">
    <div class="form-header">
        <h3 class="form-title">➕ Thêm bàn mới</h3>
        <button class="btn-close-form" onclick="BanBiaManager.closeModal()">✖</button>
    </div>

    <form id="formThemBan" class="ban-form" enctype="multipart/form-data" onsubmit="event.preventDefault(); BanBiaManager.submitAdd();">
        <div class="form-body-scroll">
            <div class="form-section">
                <h4 class="section-subtitle">📋 Thông tin cơ bản</h4>

                <div class="form-group">
                    <label class="form-label">Tên bàn <span class="required">*</span></label>
                    <input type="text"
                           class="form-control"
                           id="tenBan"
                           name="tenBan"
                           placeholder="Ví dụ: Bàn 1, Bàn VIP 01..."
                           required />
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Loại bàn <span class="required">*</span></label>
                        <select class="form-control" id="maLoai" name="maLoai" required>
                            <option value="">-- Chọn loại bàn --</option>
                            @foreach (var loai in ViewBag.LoaiBan)
                            {
                                <option value="@loai.MaLoai">@loai.TenLoai - @loai.GiaGio.ToString("N0")đ/h</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Khu vực <span class="required">*</span></label>
                        <select class="form-control" id="maKhuVuc" name="maKhuVuc" required>
                            <option value="">-- Chọn khu vực --</option>
                            @foreach (var kv in ViewBag.KhuVuc)
                            {
                                <option value="@kv.MaKhuVuc">@kv.TenKhuVuc</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Ghi chú</label>
                    <textarea class="form-control"
                              id="ghiChu"
                              name="ghiChu"
                              rows="3"
                              placeholder="Ghi chú thêm về bàn..."></textarea>
                </div>
            </div>

            <div class="form-section">
                <h4 class="section-subtitle">🖼️ Hình ảnh bàn</h4>

                <div class="image-upload-area" id="imageUploadArea">
                    <input type="file"
                           id="hinhAnh"
                           name="hinhAnh"
                           accept="image/*"
                           style="display: none;"
                           onchange="BanBiaManager.previewImage(this)" />

                    <div class="upload-placeholder" id="uploadPlaceholder" onclick="document.getElementById('hinhAnh').click()">
                        <div class="upload-icon">📷</div>
                        <p class="upload-text">Click để chọn hình ảnh</p>
                        <p class="upload-hint">Định dạng: JPG, PNG. Tối đa 5MB</p>
                    </div>

                    <div class="image-preview" id="imagePreview" style="display: none;">
                        <img id="previewImg" src="" alt="Preview" />
                        <button type="button" class="btn-remove-image" onclick="BanBiaManager.removeImage()">
                            🗑️ Xóa ảnh
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-footer">
            <button type="button" class="btn btn-secondary" onclick="BanBiaManager.closeModal()">
                ❌ Hủy
            </button>
            <button type="submit" class="btn btn-success">
                ✅ Thêm bàn
            </button>
        </div>
    </form>
</div>


</style>

<script>
    let editCameraStream = null;
    let editCapturedBlob = null;
    let editCameraActive = false;
    let faceIdMarkedForDeletion = false;

    // ===========================
    // PASSWORD TOGGLE
    // ===========================
    function toggleEditPassword(inputId) {
        const input = document.getElementById(inputId);
        input.type = input.type === 'password' ? 'text' : 'password';
    }

    // ===========================
    // FACE ID DELETION
    // ===========================
    function removeEditFaceID() {
        if (!confirm('⚠️ Bạn có chắc muốn xóa Face ID của nhân viên này?')) {
            return;
        }

        console.log('🗑️ Marking Face ID for deletion');

        // Mark for deletion
        document.getElementById('shouldDeleteFaceID').value = 'true';
        faceIdMarkedForDeletion = true;

        // Hide current face section
        const currentFaceSection = document.getElementById('currentFaceSection');
        if (currentFaceSection) {
            currentFaceSection.style.display = 'none';
        }

        // Update button text
        const btnStart = document.getElementById('btnStartEditCamera');
        if (btnStart) {
            btnStart.innerHTML = '<span class="btn-icon">📷</span><span>Quét khuôn mặt mới</span>';
        }

        showNotification('Face ID sẽ được xóa khi bạn lưu thay đổi', 'success');
    }

    // ===========================
    // CAMERA FUNCTIONS
    // ===========================
    async function startEditCamera() {
        console.log('📷 Starting edit camera...');

        const btnStart = document.getElementById('btnStartEditCamera');
        const cameraSection = document.getElementById('editCameraSection');
        const video = document.getElementById('editFaceVideo');
        const statusEl = document.getElementById('editCameraStatus');
        const btnCapture = document.getElementById('btnEditCapture');
        const previewSection = document.getElementById('editFacePreview');

        // Hide start button, show camera section
        btnStart.style.display = 'none';
        cameraSection.style.display = 'block';
        previewSection.style.display = 'none';

        statusEl.className = 'camera-status';
        statusEl.innerHTML = '<span class="status-icon">🔄</span><span>Đang khởi động camera...</span>';

        try {
            editCameraStream = await navigator.mediaDevices.getUserMedia({
                video: {
                    facingMode: 'user',
                    width: { ideal: 640 },
                    height: { ideal: 480 }
                },
                audio: false
            });

            video.srcObject = editCameraStream;
            await video.play();

            editCameraActive = true;

            statusEl.className = 'camera-status ready';
            statusEl.innerHTML = '<span class="status-icon">✅</span><span>Camera đã sẵn sàng - Đặt khuôn mặt vào khung</span>';
            
            btnCapture.disabled = false;

            console.log('✅ Edit camera started successfully');

        } catch (error) {
            console.error('❌ Edit camera error:', error);
            
            let errorMsg = 'Không thể truy cập camera';
            if (error.name === 'NotAllowedError') {
                errorMsg = 'Vui lòng cấp quyền truy cập camera';
            } else if (error.name === 'NotFoundError') {
                errorMsg = 'Không tìm thấy camera';
            } else if (error.name === 'NotReadableError') {
                errorMsg = 'Camera đang được sử dụng bởi ứng dụng khác';
            }

            statusEl.className = 'camera-status error';
            statusEl.innerHTML = `<span class="status-icon">❌</span><span>${errorMsg}</span>`;
            
            btnCapture.disabled = true;
        }
    }

    function stopEditCamera() {
        console.log('🛑 Stopping edit camera...');

        if (editCameraStream) {
            editCameraStream.getTracks().forEach(track => {
                track.stop();
                console.log('✓ Stopped track:', track.label);
            });
            editCameraStream = null;
        }

        const video = document.getElementById('editFaceVideo');
        if (video) {
            video.srcObject = null;
        }

        editCameraActive = false;

        // Show start button again, hide camera section
        document.getElementById('btnStartEditCamera').style.display = 'flex';
        document.getElementById('editCameraSection').style.display = 'none';

        console.log('✅ Edit camera stopped');
    }

    function captureEditPhoto() {
        const video = document.getElementById('editFaceVideo');
        const canvas = document.getElementById('editFaceCanvas');
        const statusEl = document.getElementById('editCameraStatus');

        if (!video || !canvas) {
            console.error('Video or canvas not found');
            return;
        }

        if (video.readyState !== video.HAVE_ENOUGH_DATA) {
            statusEl.className = 'camera-status error';
            statusEl.innerHTML = '<span class="status-icon">⚠️</span><span>Video chưa sẵn sàng, vui lòng đợi...</span>';
            return;
        }

        console.log('📸 Capturing edit photo...');

        canvas.width = video.videoWidth;
        canvas.height = video.videoHeight;

        const context = canvas.getContext('2d');
        context.drawImage(video, 0, 0, canvas.width, canvas.height);

        canvas.toBlob(function(blob) {
            if (!blob) {
                statusEl.className = 'camera-status error';
                statusEl.innerHTML = '<span class="status-icon">❌</span><span>Không thể chụp ảnh, vui lòng thử lại</span>';
                return;
            }

            editCapturedBlob = blob;
            console.log('✅ Edit photo captured:', blob.size, 'bytes');

            // Set file input
            const file = new File([blob], 'face-edit-capture.jpg', { type: 'image/jpeg' });
            const dataTransfer = new DataTransfer();
            dataTransfer.items.add(file);
            
            const fileInput = document.getElementById('faceIdEditFileInput');
            fileInput.files = dataTransfer.files;

            // Show preview
            const url = URL.createObjectURL(blob);
            const previewSection = document.getElementById('editFacePreview');
            const previewImage = document.getElementById('editPreviewImage');
            
            previewImage.src = url;
            previewSection.style.display = 'block';

            // Stop camera and hide camera section
            stopEditCamera();

            showNotification('✅ Đã chụp ảnh thành công!', 'success');

        }, 'image/jpeg', 0.95);
    }

    function retakeEditPhoto() {
        console.log('🔄 Retaking edit photo...');
        
        // Clear preview
        document.getElementById('editFacePreview').style.display = 'none';
        document.getElementById('faceIdEditFileInput').value = '';
        editCapturedBlob = null;

        // Restart camera
        startEditCamera();
    }

    // ===========================
    // MODAL CLOSE
    // ===========================
    function closeEditModal() {
        console.log('🛑 Closing edit modal...');
        
        // Stop camera if active
        if (editCameraActive) {
            stopEditCamera();
        }

        // Clear data
        editCapturedBlob = null;
        faceIdMarkedForDeletion = false;
        
        // Close modal
        closeModal();
    }

    // ===========================
    // FORM SUBMISSION
    // ===========================
    document.getElementById('formEditNhanVien').addEventListener('submit', async function(e) {
        e.preventDefault();

        const formData = new FormData(this);

        try {
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '⏳ Đang xử lý...';

            console.log('📤 Submitting form data:', {
                maNV: formData.get('MaNV'),
                tenNV: formData.get('TenNV'),
                hasFaceImage: formData.has('FaceIDAnh') && formData.get('FaceIDAnh').size > 0,
                deleteFaceID: formData.get('DeleteFaceID')
            });

            const response = await fetch('/NhanVien/CapNhatNhanVien', {
                method: 'POST',
                body: formData
            });

            const result = await response.json();
            console.log('📥 Server response:', result);

            if (result.success) {
                showNotification('✅ ' + result.message, 'success');
                
                // Stop camera if still active
                if (editCameraActive) {
                    stopEditCamera();
                }
                
                setTimeout(() => {
                    closeModal();
                    location.reload();
                }, 1000);
            } else {
                showNotification('❌ ' + result.message, 'error');
                submitBtn.disabled = false;
                submitBtn.innerHTML = '💾 Lưu thay đổi';
            }
        } catch (error) {
            console.error('❌ Submit error:', error);
            showNotification('❌ Có lỗi xảy ra: ' + error.message, 'error');
            
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.disabled = false;
            submitBtn.innerHTML = '💾 Lưu thay đổi';
        }
    });

    // ===========================
    // NOTIFICATION
    // ===========================
    function showNotification(message, type = 'info') {
        const notification = document.createElement('div');
        notification.style.cssText = `
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 16px 24px;
            background: ${type === 'success' ? '#28a745' : type === 'error' ? '#dc3545' : '#667eea'};
            color: white;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
            z-index: 10000;
            font-weight: 600;
            font-size: 14px;
            animation: slideInRight 0.4s ease;
        `;
        notification.textContent = message;

        document.body.appendChild(notification);

        setTimeout(() => {
            notification.style.animation = 'slideOutRight 0.4s ease';
            setTimeout(() => notification.remove(), 400);
        }, 3000);
    }

    window.addEventListener('beforeunload', function() {
        if (editCameraActive) {
            stopEditCamera();
        }
    });

    // Export functions to global scope IMMEDIATELY (not in IIFE)
    window.startEditCamera = startEditCamera;
    window.stopEditCamera = stopEditCamera;
    window.captureEditPhoto = captureEditPhoto;
    window.retakeEditPhoto = retakeEditPhoto;
    window.removeEditFaceID = removeEditFaceID;
    window.closeEditModal = closeEditModal;
    window.toggleEditPassword = toggleEditPassword;

    console.log('✅ Edit Employee Form initialized');
</script>
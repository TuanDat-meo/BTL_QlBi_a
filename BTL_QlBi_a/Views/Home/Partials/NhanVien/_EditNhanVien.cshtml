<script>
    let editCameraStream = null;
    let editCapturedImageBlob = null;

    function togglePassword(inputId) {
        const input = document.getElementById(inputId);
        input.type = input.type === 'password' ? 'text' : 'password';
    }

    function switchEditUploadMethod(method, event) {
        // Prevent default if event exists
        if (event) {
            event.preventDefault();

            // Update buttons
            document.querySelectorAll('#formEditNhanVien .upload-method-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
        }

        // Update sections
        const fileSection = document.getElementById('editFileUploadSection');
        const cameraSection = document.getElementById('editCameraUploadSection');

        if (method === 'file') {
            if (fileSection) fileSection.classList.add('active');
            if (cameraSection) cameraSection.classList.remove('active');
            stopEditCamera();
        } else {
            if (fileSection) fileSection.classList.remove('active');
            if (cameraSection) cameraSection.classList.add('active');
        }
    }

    function handleEditFileSelect(input) {
        const preview = document.getElementById('faceIdEditPreview');

        if (input.files && input.files[0]) {
            const file = input.files[0];

            // Validate file type
            if (!file.type.match('image/(jpeg|jpg|png)')) {
                alert('❌ Chỉ chấp nhận file JPG, JPEG, PNG');
                input.value = '';
                return;
            }

            // Validate file size (5MB)
            if (file.size > 5 * 1024 * 1024) {
                alert('❌ Kích thước file không được vượt quá 5MB');
                input.value = '';
                return;
            }

            const reader = new FileReader();
            reader.onload = function(e) {
                preview.innerHTML = `
                    <div class="current-label">Ảnh mới:</div>
                    <img src="${e.target.result}" alt="New Face ID">
                    <div class="preview-actions">
                        <button type="button" class="btn btn-secondary" onclick="clearEditPreview()">
                            🗑️ Xóa ảnh
                        </button>
                    </div>
                `;
            };
            reader.readAsDataURL(file);
        } else {
            preview.innerHTML = '';
        }
    }

    async function startEditCamera() {
        const video = document.getElementById('editFaceVideo');
        const btnStart = document.querySelector('#editCameraUploadSection .btn-camera');
        const btnCapture = document.querySelector('#editCameraUploadSection .btn-capture');
        const btnStop = document.querySelector('#editCameraUploadSection .btn-secondary');

        try {
            editCameraStream = await navigator.mediaDevices.getUserMedia({
                video: {
                    facingMode: 'user',
                    width: { ideal: 640 },
                    height: { ideal: 480 }
                }
            });

            video.srcObject = editCameraStream;

            // Update UI
            btnStart.style.display = 'none';
            btnCapture.style.display = 'inline-block';
            btnStop.style.display = 'inline-block';

        } catch (error) {
            console.error('Camera error:', error);
            alert('❌ Không thể truy cập camera: ' + error.message);
        }
    }

    function stopEditCamera() {
        if (editCameraStream) {
            editCameraStream.getTracks().forEach(track => track.stop());
            editCameraStream = null;
        }

        const video = document.getElementById('editFaceVideo');
        if (video) video.srcObject = null;

        const btnStart = document.querySelector('#editCameraUploadSection .btn-camera');
        const btnCapture = document.querySelector('#editCameraUploadSection .btn-capture');
        const btnStop = document.querySelector('#editCameraUploadSection .btn-secondary');

        if (btnStart) btnStart.style.display = 'inline-block';
        if (btnCapture) btnCapture.style.display = 'none';
        if (btnStop) btnStop.style.display = 'none';
    }

    function captureEditPhoto() {
        const video = document.getElementById('editFaceVideo');
        const canvas = document.getElementById('editFaceCanvas');
        const preview = document.getElementById('faceIdEditPreview');

        canvas.width = video.videoWidth;
        canvas.height = video.videoHeight;

        const context = canvas.getContext('2d');
        context.drawImage(video, 0, 0);

        canvas.toBlob(function(blob) {
            editCapturedImageBlob = blob;

            const url = URL.createObjectURL(blob);
            preview.innerHTML = `
                <div class="current-label">Ảnh vừa chụp:</div>
                <img src="${url}" alt="Captured Photo">
                <div class="preview-actions">
                    <button type="button" class="btn btn-secondary" onclick="retakeEditPhoto()">
                        🔄 Chụp lại
                    </button>
                    <button type="button" class="btn btn-primary" onclick="confirmEditPhoto()">
                        ✅ Sử dụng ảnh này
                    </button>
                </div>
            `;
        }, 'image/jpeg', 0.95);
    }

    function retakeEditPhoto() {
        const preview = document.getElementById('faceIdEditPreview');
        preview.innerHTML = '';
        editCapturedImageBlob = null;
    }

    function confirmEditPhoto() {
        if (editCapturedImageBlob) {
            // Create a File object from blob
            const file = new File([editCapturedImageBlob], 'face-edit-capture.jpg', { type: 'image/jpeg' });

            // Create a DataTransfer to set the file input
            const dataTransfer = new DataTransfer();
            dataTransfer.items.add(file);

            const fileInput = document.getElementById('faceIdEditFileInput');
            fileInput.files = dataTransfer.files;

            stopEditCamera();

            // Switch to file method to show the uploaded image
            switchEditUploadMethod('file');
            handleEditFileSelect(fileInput);

            alert('✅ Đã chọn ảnh thành công!');
        }
    }

    function clearEditPreview() {
        const preview = document.getElementById('faceIdEditPreview');
        const fileInput = document.getElementById('faceIdEditFileInput');

        preview.innerHTML = '';
        fileInput.value = '';
        editCapturedImageBlob = null;
    }

    async function removeFaceID(maNV) {
        if (!confirm('⚠️ Bạn có chắc muốn xóa Face ID của nhân viên này?')) {
            return;
        }

        try {
            const response = await fetch('/NhanVien/DeleteFaceId', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ MaNV: maNV })
            });

            const result = await response.json();

            if (result.success) {
                alert('✅ Đã xóa Face ID');
                closeModal();
                location.reload();
            } else {
                alert('❌ ' + (result.message || 'Không thể xóa Face ID'));
            }
        } catch (error) {
            console.error('Error:', error);
            alert('❌ Có lỗi xảy ra: ' + error.message);
        }
    }

    // Form submission
    document.getElementById('formEditNhanVien').addEventListener('submit', async function(e) {
        e.preventDefault();

        const formData = new FormData(this);

        // If using captured photo, ensure it's in the form data
        if (editCapturedImageBlob && !formData.get('FaceIDAnh')) {
            formData.append('FaceIDAnh', editCapturedImageBlob, 'face-edit-capture.jpg');
        }

        try {
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '⏳ Đang xử lý...';

            const response = await fetch('/NhanVien/CapNhatNhanVien', {
                method: 'POST',
                body: formData
            });

            const result = await response.json();

            if (result.success) {
                alert('✅ ' + result.message);
                stopEditCamera();
                closeModal();
                location.reload();
            } else {
                alert('❌ ' + result.message);
                submitBtn.disabled = false;
                submitBtn.innerHTML = '💾 Lưu thay đổi';
            }
        } catch (error) {
            console.error('Error:', error);
            alert('❌ Có lỗi xảy ra: ' + error.message);
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.disabled = false;
            submitBtn.innerHTML = '💾 Lưu thay đổi';
        }
    });

    // Cleanup when modal closes
    window.addEventListener('beforeunload', function() {
        stopEditCamera();
    });
</script>
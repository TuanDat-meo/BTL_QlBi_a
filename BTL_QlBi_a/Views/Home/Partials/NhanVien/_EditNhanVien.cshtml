@model BTL_QlBi_a.Models.Entities.NhanVien

<form id="formEditNhanVien" enctype="multipart/form-data">
    <input type="hidden" name="MaNV" value="@Model.MaNV">
    <input type="hidden" id="shouldDeleteFaceID" name="DeleteFaceID" value="false">

    <div class="form-row">
        <div class="form-group" style="flex: 1;">
            <label class="form-label">Họ tên <span style="color: red;">*</span></label>
            <input type="text"
                   name="TenNV"
                   class="form-control"
                   value="@Model.TenNV"
                   placeholder="Nhập họ tên nhân viên"
                   required>
        </div>

        <div class="form-group" style="flex: 1;">
            <label class="form-label">Số điện thoại <span style="color: red;">*</span></label>
            <input type="tel"
                   name="SDT"
                   class="form-control"
                   value="@Model.SDT"
                   placeholder="0123456789"
                   pattern="[0-9]{10,11}"
                   required>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group" style="flex: 1;">
            <label class="form-label">Email</label>
            <input type="email"
                   name="Email"
                   class="form-control"
                   value="@Model.Email"
                   placeholder="email@example.com">
        </div>

        <div class="form-group" style="flex: 1;">
            <label class="form-label">Nhóm quyền <span style="color: red;">*</span></label>
            <select name="MaNhom" class="form-control" required>
                @foreach (var nhom in ViewBag.NhomQuyen)
                {
                    @if (nhom.MaNhom == Model.MaNhom)
                    {
                        <option value="@nhom.MaNhom" selected>@nhom.TenNhom</option>
                    }
                    else
                    {
                        <option value="@nhom.MaNhom">@nhom.TenNhom</option>
                    }
                }
            </select>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group" style="flex: 1;">
            <label class="form-label">Lương cơ bản (VNĐ) <span style="color: red;">*</span></label>
            <input type="number"
                   name="LuongCoBan"
                   class="form-control"
                   value="@Model.LuongCoBan"
                   min="0"
                   step="100000"
                   required>
        </div>

        <div class="form-group" style="flex: 1;">
            <label class="form-label">Phụ cấp (VNĐ)</label>
            <input type="number"
                   name="PhuCap"
                   class="form-control"
                   value="@Model.PhuCap"
                   min="0"
                   step="100000">
        </div>
    </div>

    <div class="form-group">
        <label class="form-label">Trạng thái</label>
        <div style="display: flex; gap: 15px;">
            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                <input type="radio" name="TrangThai" value="0" 
                       @(Model.TrangThai == BTL_QlBi_a.Models.Entities.TrangThaiNhanVien.DangLam ? "checked" : "")>
                <span>✅ Đang làm việc</span>
            </label>
            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                <input type="radio" name="TrangThai" value="1" 
                       @(Model.TrangThai == BTL_QlBi_a.Models.Entities.TrangThaiNhanVien.Nghi ? "checked" : "")>
                <span>❌ Nghỉ việc</span>
            </label>
        </div>
    </div>

    <div class="form-group">
        <label class="form-label">Đổi mật khẩu mới</label>
        <div style="position: relative;">
            <input type="password"
                   name="MatKhauMoi"
                   id="matKhauMoiInput"
                   class="form-control"
                   placeholder="Để trống nếu không đổi mật khẩu"
                   minlength="6">
            <button type="button"
                    onclick="toggleEditPassword('matKhauMoiInput')"
                    style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); background: none; border: none; cursor: pointer; font-size: 18px;">
                👁️
            </button>
        </div>
        <small style="color: #6c757d; font-size: 11px;">Để trống nếu không muốn thay đổi mật khẩu</small>
    </div>

    <!-- Face ID Section -->
    <div class="form-group">
        <label class="form-label">
            📸 Face ID
            @if (!string.IsNullOrEmpty(Model.FaceIDAnh))
            {
                <span style="color: #28a745; font-size: 11px;">✓ Đã có Face ID</span>
            }
            else
            {
                <span style="color: #dc3545; font-size: 11px;">✗ Chưa có Face ID</span>
            }
        </label>

        <div class="faceid-container">
            <!-- Current Face ID -->
            @if (!string.IsNullOrEmpty(Model.FaceIDAnh))
            {
                <div class="current-faceid" id="currentFaceSection">
                    <div class="current-label">Ảnh hiện tại:</div>
                    <img src="~/asset/img/@Model.FaceIDAnh" 
                         alt="Current Face ID" 
                         class="current-face-img">
                    <button type="button"
                            class="btn-remove-faceid"
                            onclick="removeEditFaceID()">
                        🗑️ Xóa Face ID
                    </button>
                </div>
            }

            <!-- Update Face ID Button -->
            <div id="updateFaceSection">
                <button type="button" 
                        id="btnStartEditCamera" 
                        class="btn-start-camera"
                        onclick="startEditCamera()">
                    <span class="btn-icon">📷</span>
                    <span>@(string.IsNullOrEmpty(Model.FaceIDAnh) ? "Quét khuôn mặt" : "Cập nhật Face ID")</span>
                </button>
            </div>

            <!-- Camera Section (Hidden by default) -->
            <div id="editCameraSection" class="camera-section" style="display: none;">
                <div class="camera-container">
                    <video id="editFaceVideo" autoplay playsinline></video>
                    <canvas id="editFaceCanvas" style="display: none;"></canvas>
                    <div class="camera-overlay">
                        <div class="face-guide"></div>
                    </div>
                </div>

                <div class="camera-status" id="editCameraStatus">
                    <span class="status-icon">📸</span>
                    <span>Đang khởi động camera...</span>
                </div>

                <div class="camera-controls">
                    <button type="button" 
                            class="btn btn-capture" 
                            id="btnEditCapture"
                            onclick="captureEditPhoto()"
                            disabled>
                        📸 Chụp ảnh
                    </button>
                    <button type="button" 
                            class="btn btn-secondary" 
                            onclick="stopEditCamera()">
                        ❌ Đóng camera
                    </button>
                </div>
            </div>

            <!-- Preview Section -->
            <div id="editFacePreview" class="preview-section" style="display: none;">
                <div class="preview-label">✅ Ảnh đã chụp:</div>
                <img id="editPreviewImage" alt="Face Preview">
                <div class="preview-actions">
                    <button type="button" 
                            class="btn btn-secondary"
                            onclick="retakeEditPhoto()">
                        🔄 Chụp lại
                    </button>
                </div>
            </div>

            <!-- Hidden file input -->
            <input type="file" 
                   name="FaceIDAnh" 
                   id="faceIdEditFileInput" 
                   style="display: none;" 
                   accept="image/jpeg,image/jpg,image/png">

            <div class="faceid-hint">
                <span>💡 Tip: Đặt khuôn mặt vào khung hình tròn, ánh sáng đủ, không đeo khẩu trang</span>
            </div>
        </div>
    </div>

    <div class="form-actions">
        <button type="button" class="btn btn-secondary" onclick="closeEditModal()">
            ❌ Hủy
        </button>
        <button type="submit" class="btn btn-primary">
            💾 Lưu thay đổi
        </button>
    </div>
</form>


@model BTL_QlBi_a.Models.Entities.NhanVien

<form id="formEditNhanVien" enctype="multipart/form-data">
    <input type="hidden" name="MaNV" value="@Model.MaNV">

    <div class="form-row">
        <div class="form-group" style="flex: 1;">
            <label class="form-label">Họ tên <span style="color: red;">*</span></label>
            <input type="text"
                   name="TenNV"
                   class="form-control"
                   value="@Model.TenNV"
                   placeholder="Nhập họ tên nhân viên"
                   required>
        </div>

        <div class="form-group" style="flex: 1;">
            <label class="form-label">Số điện thoại <span style="color: red;">*</span></label>
            <input type="tel"
                   name="SDT"
                   class="form-control"
                   value="@Model.SDT"
                   placeholder="0123456789"
                   pattern="[0-9]{10,11}"
                   required>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group" style="flex: 1;">
            <label class="form-label">Email</label>
            <input type="email"
                   name="Email"
                   class="form-control"
                   value="@Model.Email"
                   placeholder="email@example.com">
        </div>

        <div class="form-group" style="flex: 1;">
            <label class="form-label">Nhóm quyền <span style="color: red;">*</span></label>
            <select name="MaNhom" class="form-control" required>
                @foreach (var nhom in ViewBag.NhomQuyen)
                {
                    if (nhom.MaNhom == Model.MaNhom)
                    {
                        <option value="@nhom.MaNhom" selected>
                            @nhom.TenNhom
                        </option>
                    }
                    else
                    {
                        <option value="@nhom.MaNhom">
                            @nhom.TenNhom
                        </option>
                    }
                }
            </select>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group" style="flex: 1;">
            <label class="form-label">Lương cơ bản (VNĐ) <span style="color: red;">*</span></label>
            <input type="number"
                   name="LuongCoBan"
                   class="form-control"
                   value="@Model.LuongCoBan"
                   placeholder="5000000"
                   min="0"
                   step="100000"
                   required>
        </div>

        <div class="form-group" style="flex: 1;">
            <label class="form-label">Phụ cấp (VNĐ)</label>
            <input type="number"
                   name="PhuCap"
                   class="form-control"
                   value="@Model.PhuCap"
                   placeholder="500000"
                   min="0"
                   step="100000">
        </div>
    </div>

    <div class="form-group">
        <label class="form-label">Ca làm việc mặc định <span style="color: red;">*</span></label>
        <div style="display: flex; gap: 15px; flex-wrap: wrap;">
            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                <input type="radio" name="CaMacDinh" value="0" @(Model.CaMacDinh == BTL_QlBi_a.Models.Entities.CaLamViec.Sang ? "checked" : "")>
                <span>🌅 Sáng (6h-14h)</span>
            </label>
            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                <input type="radio" name="CaMacDinh" value="1" @(Model.CaMacDinh == BTL_QlBi_a.Models.Entities.CaLamViec.Chieu ? "checked" : "")>
                <span>☀️ Chiều (14h-22h)</span>
            </label>
            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                <input type="radio" name="CaMacDinh" value="2" @(Model.CaMacDinh == BTL_QlBi_a.Models.Entities.CaLamViec.Toi ? "checked" : "")>
                <span>🌙 Tối (18h-2h)</span>
            </label>
        </div>
    </div>

    <div class="form-group">
        <label class="form-label">Trạng thái</label>
        <div style="display: flex; gap: 15px;">
            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                <input type="radio" name="TrangThai" value="0" @(Model.TrangThai == BTL_QlBi_a.Models.Entities.TrangThaiNhanVien.DangLam ? "checked" : "")>
                <span>✅ Đang làm việc</span>
            </label>
            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                <input type="radio" name="TrangThai" value="1" @(Model.TrangThai == BTL_QlBi_a.Models.Entities.TrangThaiNhanVien.Nghi ? "checked" : "")>
                <span>❌ Nghỉ việc</span>
            </label>
        </div>
    </div>

    <div class="form-group">
        <label class="form-label">Đổi mật khẩu mới</label>
        <div style="position: relative;">
            <input type="password"
                   name="MatKhauMoi"
                   id="matKhauMoiInput"
                   class="form-control"
                   placeholder="Để trống nếu không đổi mật khẩu"
                   minlength="6">
            <button type="button"
                    onclick="togglePassword('matKhauMoiInput')"
                    style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); background: none; border: none; cursor: pointer; font-size: 18px;">
                👁️
            </button>
        </div>
        <small style="color: #6c757d; font-size: 11px;">Để trống nếu không muốn thay đổi mật khẩu</small>
    </div>

    <!-- Face ID Update Section - UPDATED -->
    <div class="form-group">
        <label class="form-label">
            📸 Cập nhật Face ID
            @if (!string.IsNullOrEmpty(Model.FaceIDAnh))
            {
                <span style="color: #28a745; font-size: 11px;">✓ Đã có Face ID</span>
            }
            else
            {
                <span style="color: #dc3545; font-size: 11px;">✗ Chưa có Face ID</span>
            }
        </label>

        <div class="faceid-update-container">
            <!-- Current Face ID -->
            @if (!string.IsNullOrEmpty(Model.FaceIDAnh))
            {
                <div class="current-faceid">
                    <div class="current-label">Ảnh hiện tại:</div>
                    <img src="~/asset/img/@Model.FaceIDAnh"
                         alt="Current Face ID"
                         class="current-face-img">
                    <button type="button"
                            class="btn-remove-faceid"
                            onclick="removeFaceID(@Model.MaNV)">
                        🗑️ Xóa Face ID
                    </button>
                </div>
            }

            <!-- Upload New Face ID -->
            <div class="upload-new-section">
                <div class="section-header">
                    @if (!string.IsNullOrEmpty(Model.FaceIDAnh))
                    {
                        <span>Cập nhật ảnh mới:</span>
                    }
                    else
                    {
                        <span>Thêm Face ID:</span>
                    }
                </div>

                <!-- Upload Methods -->
                <div class="upload-methods">
                    <button type="button" class="upload-method-btn active" onclick="switchEditUploadMethod('file')" data-method="file">
                        📁 Chọn file
                    </button>
                    <button type="button" class="upload-method-btn" onclick="switchEditUploadMethod('camera')" data-method="camera">
                        📷 Chụp ảnh
                    </button>
                </div>

                <!-- File Upload Method -->
                <div id="editFileUploadSection" class="upload-section active">
                    <input type="file"
                           name="FaceIDAnh"
                           id="faceIdEditFileInput"
                           class="form-control"
                           accept="image/jpeg,image/jpg,image/png"
                           onchange="handleEditFileSelect(this)">
                    <div class="upload-hint">
                        <span>📌 Chấp nhận: JPG, JPEG, PNG</span>
                        <span>📏 Kích thước tối đa: 5MB</span>
                        <span>👤 Nên chụp rõ khuôn mặt, ánh sáng đủ</span>
                    </div>
                </div>

                <!-- Camera Upload Method -->
                <div id="editCameraUploadSection" class="upload-section">
                    <div class="camera-container">
                        <video id="editFaceVideo" autoplay playsinline></video>
                        <canvas id="editFaceCanvas" style="display: none;"></canvas>
                        <div class="camera-overlay">
                            <div class="face-guide"></div>
                        </div>
                    </div>
                    <div class="camera-controls">
                        <button type="button" class="btn btn-camera" onclick="startEditCamera()">
                            📷 Bật camera
                        </button>
                        <button type="button" class="btn btn-capture" onclick="captureEditPhoto()" style="display: none;">
                            📸 Chụp ảnh
                        </button>
                        <button type="button" class="btn btn-secondary" onclick="stopEditCamera()" style="display: none;">
                            ❌ Tắt camera
                        </button>
                    </div>
                </div>

                <!-- Preview New Image -->
                <div id="faceIdEditPreview" class="preview-container"></div>
            </div>
        </div>
    </div>

    <div class="form-actions" style="display: flex; gap: 10px; margin-top: 20px;">
        <button type="button" class="btn btn-secondary" onclick="closeModal()" style="flex: 1;">
            ❌ Hủy
        </button>
        <button type="submit" class="btn btn-primary" style="flex: 2;">
            💾 Lưu thay đổi
        </button>
    </div>
</form>


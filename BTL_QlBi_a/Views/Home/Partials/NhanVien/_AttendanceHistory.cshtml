@{
    var maNV = ViewBag.MaNV;
    var month = ViewBag.Month ?? DateTime.Now.Month;
    var year = ViewBag.Year ?? DateTime.Now.Year;
}

<div class="attendance-history-container">
    <!-- Header với điều hướng tháng -->
    <div class="attendance-header">
        <button class="btn-nav" onclick="changeMonth(-1)">
            <span>◀️</span>
        </button>
        <h3 id="currentMonth">Tháng @month/@year</h3>
        <button class="btn-nav" onclick="changeMonth(1)">
            <span>▶️</span>
        </button>
    </div>

    <!-- Thống kê -->
    <div class="attendance-stats">
        <div class="stat-box">
            <div class="stat-icon">📅</div>
            <div class="stat-number" id="statDays">0</div>
            <div class="stat-label">Ngày làm</div>
        </div>
        <div class="stat-box">
            <div class="stat-icon">⏱️</div>
            <div class="stat-number" id="statHours">0</div>
            <div class="stat-label">Tổng giờ</div>
        </div>
        <div class="stat-box">
            <div class="stat-icon">⚠️</div>
            <div class="stat-number" id="statLate">0</div>
            <div class="stat-label">Đi trễ</div>
        </div>
    </div>

    <!-- Danh sách chấm công -->
    <div class="attendance-list" id="attendanceList">
        <div class="loading-spinner">⏳ Đang tải dữ liệu...</div>
    </div>
</div>

<style>
    .attendance-history-container {
        max-width: 900px;
        margin: 0 auto;
    }

    .attendance-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px 0;
        border-bottom: 2px solid #e9ecef;
        margin-bottom: 20px;
    }

        .attendance-header h3 {
            margin: 0;
            font-size: 20px;
            font-weight: 700;
            color: #1a1a2e;
        }

    .btn-nav {
        width: 40px;
        height: 40px;
        border: 2px solid #dee2e6;
        background: white;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 16px;
    }

        .btn-nav:hover {
            border-color: #667eea;
            background: #f8f9ff;
            transform: scale(1.05);
        }

    .attendance-stats {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 15px;
        margin-bottom: 25px;
    }

    .stat-box {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px;
        padding: 20px;
        text-align: center;
        color: white;
    }

    .stat-icon {
        font-size: 32px;
        margin-bottom: 8px;
    }

    .stat-number {
        font-size: 28px;
        font-weight: 700;
        margin-bottom: 4px;
    }

    .stat-label {
        font-size: 12px;
        opacity: 0.9;
        font-weight: 600;
    }

    .attendance-list {
        max-height: 500px;
        overflow-y: auto;
        padding-right: 8px;
    }

        .attendance-list::-webkit-scrollbar {
            width: 6px;
        }

        .attendance-list::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }

        .attendance-list::-webkit-scrollbar-thumb {
            background: #667eea;
            border-radius: 10px;
        }

    .attendance-items {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .attendance-item {
        background: white;
        border: 2px solid #e9ecef;
        border-radius: 12px;
        padding: 20px;
        transition: all 0.3s ease;
    }

        .attendance-item:hover {
            border-color: #667eea;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.15);
        }

        .attendance-item.status-success {
            border-left: 4px solid #28a745;
        }

        .attendance-item.status-warning {
            border-left: 4px solid #ffc107;
        }

        .attendance-item.status-danger {
            border-left: 4px solid #dc3545;
        }

    .attendance-date-section {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 15px;
        padding-bottom: 15px;
        border-bottom: 2px solid #f8f9fa;
    }

    .day-number {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        font-weight: 700;
    }

    .day-info {
        flex: 1;
    }

    .day-name {
        font-size: 14px;
        font-weight: 600;
        color: #495057;
        margin-bottom: 2px;
    }

    .date-full {
        font-size: 12px;
        color: #6c757d;
    }

    .attendance-time-section {
        display: grid;
        grid-template-columns: 1fr auto 1fr auto 1fr;
        gap: 15px;
        align-items: center;
        margin-bottom: 15px;
    }

    .time-item {
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .time-item.total {
            background: #f8f9fa;
            padding: 8px 12px;
            border-radius: 8px;
        }

    .time-icon {
        font-size: 20px;
    }

    .time-info {
        display: flex;
        flex-direction: column;
    }

    .time-label {
        font-size: 11px;
        color: #6c757d;
        font-weight: 600;
        margin-bottom: 2px;
    }

    .time-value {
        font-size: 14px;
        font-weight: 700;
        color: #1a1a2e;
    }

        .time-value.has-time {
            color: #667eea;
        }

        .time-value.no-time {
            color: #dee2e6;
        }

    .time-divider {
        font-size: 18px;
        color: #dee2e6;
    }

    .attendance-status-section {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }

        .status-badge.status-success {
            background: #d4edda;
            color: #155724;
        }

        .status-badge.status-warning {
            background: #fff3cd;
            color: #856404;
        }

        .status-badge.status-danger {
            background: #f8d7da;
            color: #721c24;
        }

        .status-badge.status-info {
            background: #d1ecf1;
            color: #0c5460;
        }

        .status-badge.status-primary {
            background: #e8f0ff;
            color: #004085;
        }

    .status-icon {
        font-size: 14px;
    }

    .auth-method {
        font-size: 11px;
        color: #6c757d;
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .attendance-note {
        margin-top: 12px;
        padding: 10px 12px;
        background: #f8f9fa;
        border-radius: 8px;
        display: flex;
        align-items: start;
        gap: 8px;
    }

    .note-icon {
        font-size: 14px;
        margin-top: 2px;
    }

    .note-text {
        font-size: 12px;
        color: #495057;
        line-height: 1.5;
    }

    .loading-spinner {
        text-align: center;
        padding: 40px;
        font-size: 16px;
        color: #6c757d;
    }

    .empty-state-small {
        text-align: center;
        padding: 40px 20px;
    }

    .empty-icon {
        font-size: 48px;
        margin-bottom: 15px;
        opacity: 0.5;
    }

    .empty-state-small p {
        color: #6c757d;
        font-size: 14px;
    }

    .error-state {
        text-align: center;
        padding: 40px 20px;
    }

    .error-icon {
        font-size: 48px;
        margin-bottom: 15px;
    }

    .btn-retry {
        margin-top: 15px;
        padding: 10px 20px;
        background: #667eea;
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-size: 14px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-retry:hover {
            background: #5568d3;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        }

    media (max-width: 768px) {
        .attendance-stats {
            grid-template-columns: 1fr;
        }

        .attendance-time-section {
            grid-template-columns: 1fr;
            gap: 10px;
        }

        .time-divider {
            display: none;
        }
    }
</style>

<script>
    // Store current employee ID globally
    window.currentEmployeeId = @maNV;

    // Load attendance on page load
    document.addEventListener('DOMContentLoaded', function() {
        if (window.currentEmployeeId) {
            loadAttendanceHistory(window.currentEmployeeId);
        }
    });
</script>
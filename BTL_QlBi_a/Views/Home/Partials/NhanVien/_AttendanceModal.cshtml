<script>
    // Show employee info section when recognized
    document.addEventListener('DOMContentLoaded', function() {
        const observer = new MutationObserver(function(mutations) {
            const employeeInfo = document.getElementById('recognizedEmployeeInfo');
            if (employeeInfo && employeeInfo.innerHTML.trim() !== '') {
                employeeInfo.style.display = 'block';
            }
        });

        const employeeInfoEl = document.getElementById('recognizedEmployeeInfo');
        if (employeeInfoEl) {
            observer.observe(employeeInfoEl, {
                childList: true,
                subtree: true
            });
        }
    });

    // Load employee info for manual check-in
    async function loadEmployeeInfo(maNV) {
        if (!maNV) return;

        const infoDiv = document.getElementById('manualEmployeeInfo');
        const submitBtn = document.getElementById('submitAttendanceBtn');

        try {
            // Fetch employee data
            const response = await fetch(`/NhanVien/ChiTietNhanVien?maNV=${maNV}`);
            if (!response.ok) {
                throw new Error('Không tìm thấy nhân viên');
            }

            // Get today's attendance
            const todayResponse = await fetch(`/NhanVien/GetTodayAttendance?maNV=${maNV}`);
            const todayAttendance = await todayResponse.json();

            // Show employee info
            infoDiv.style.display = 'block';
            infoDiv.innerHTML = `
                <div class="employee-name">Nhân viên: #${maNV}</div>
                <div class="employee-role">Đã xác thực</div>
            `;

            // Set recognized employee
            window.recognizedEmployee = { maNV: parseInt(maNV) };
            window.todayAttendanceRecord = todayAttendance;

            // Update UI
            updateAttendanceUIForEmployee({ maNV: parseInt(maNV) }, todayAttendance);

        } catch (error) {
            console.error('Error loading employee:', error);
            infoDiv.style.display = 'none';
            showNotification('❌ ' + error.message, 'error');

            if (submitBtn) {
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<span class="btn-icon">⏰</span><span>Vui lòng nhập mã NV</span>';
            }
        }
    }
</script>
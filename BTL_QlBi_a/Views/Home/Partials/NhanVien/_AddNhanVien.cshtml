    .faceid-upload-container {
        border: 2px dashed #dee2e6;
        border-radius: 12px;
        padding: 20px;
        background: #f8f9fa;
    }

    .upload-methods {
        display: flex;
        gap: 10px;
        margin-bottom: 15px;
    }

    .upload-method-btn {
        flex: 1;
        padding: 10px;
        border: 2px solid #dee2e6;
        background: white;
        border-radius: 8px;
        cursor: pointer;
        font-size: 13px;
        font-weight: 600;
        transition: all 0.3s;
    }

        .upload-method-btn:hover {

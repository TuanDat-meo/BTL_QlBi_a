<form id="formThemNhanVien" enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group" style="flex: 1;">
            <label class="form-label">Họ tên <span style="color: red;">*</span></label>
            <input type="text"
                   name="TenNV"
                   class="form-control"
                   placeholder="Nhập họ tên nhân viên"
                   required>
        </div>

        <div class="form-group" style="flex: 1;">
            <label class="form-label">Số điện thoại <span style="color: red;">*</span></label>
            <input type="tel"
                   name="SDT"
                   class="form-control"
                   placeholder="0123456789"
                   pattern="[0-9]{10,11}"
                   required>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group" style="flex: 1;">
            <label class="form-label">Email</label>
            <input type="email"
                   name="Email"
                   class="form-control"
                   placeholder="email@example.com">
        </div>

        <div class="form-group" style="flex: 1;">
            <label class="form-label">Nhóm quyền <span style="color: red;">*</span></label>
            <select name="MaNhom" class="form-control" required>
                <option value="">-- Chọn nhóm quyền --</option>
                @foreach (var nhom in ViewBag.NhomQuyen)
                {
                    <option value="@nhom.MaNhom">@nhom.TenNhom</option>
                }
            </select>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group" style="flex: 1;">
            <label class="form-label">Lương cơ bản (VNĐ) <span style="color: red;">*</span></label>
            <input type="number"
                   name="LuongCoBan"
                   class="form-control"
                   placeholder="5000000"
                   min="0"
                   step="100000"
                   value="5000000"
                   required>
        </div>

        <div class="form-group" style="flex: 1;">
            <label class="form-label">Phụ cấp (VNĐ)</label>
            <input type="number"
                   name="PhuCap"
                   class="form-control"
                   placeholder="500000"
                   min="0"
                   step="100000"
                   value="0">
        </div>
    </div>

    <div class="form-group">
        <label class="form-label">Ca làm việc mặc định <span style="color: red;">*</span></label>
        <div style="display: flex; gap: 15px; flex-wrap: wrap;">
            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                <input type="radio" name="CaMacDinh" value="0" checked>
                <span>🌅 Sáng (6h-14h)</span>
            </label>
            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                <input type="radio" name="CaMacDinh" value="1">
                <span>☀️ Chiều (14h-22h)</span>
            </label>
            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                <input type="radio" name="CaMacDinh" value="2">
                <span>🌙 Tối (18h-2h)</span>
            </label>
        </div>
    </div>

    <div class="form-group">
        <label class="form-label">Mật khẩu <span style="color: red;">*</span></label>
        <div style="position: relative;">
            <input type="password"
                   name="MatKhau"
                   id="matKhauInput"
                   class="form-control"
                   placeholder="Nhập mật khẩu"
                   minlength="6"
                   required>
            <button type="button"
                    onclick="togglePassword('matKhauInput')"
                    style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); background: none; border: none; cursor: pointer; font-size: 18px;">
                👁️
            </button>
        </div>
        <small style="color: #6c757d; font-size: 11px;">Tối thiểu 6 ký tự</small>
    </div>

    <!-- Face ID Upload Section - UPDATED -->
    <div class="form-group">
        <label class="form-label">
            📸 Ảnh Face ID
            <span style="color: #667eea; font-size: 11px;">(Khuyến nghị)</span>
        </label>

        <div class="faceid-upload-container">
            <!-- Upload Methods -->
            <div class="upload-methods">
                <button type="button" class="upload-method-btn active" onclick="switchUploadMethod('file')" data-method="file">
                    📁 Chọn file
                </button>
                <button type="button" class="upload-method-btn" onclick="switchUploadMethod('camera')" data-method="camera">
                    📷 Chụp ảnh
                </button>
            </div>

            <!-- File Upload Method -->
            <div id="fileUploadSection" class="upload-section active">
                <input type="file"
                       name="FaceIDAnh"
                       id="faceIdFileInput"
                       class="form-control"
                       accept="image/jpeg,image/jpg,image/png"
                       onchange="handleFileSelect(this)">
                <div class="upload-hint">
                    <span>📌 Chấp nhận: JPG, JPEG, PNG</span>
                    <span>📏 Kích thước tối đa: 5MB</span>
                    <span>👤 Nên chụp rõ khuôn mặt, ánh sáng đủ</span>
                </div>
            </div>

            <!-- Camera Upload Method -->
            <div id="cameraUploadSection" class="upload-section">
                <div class="camera-container">
                    <video id="addFaceVideo" autoplay playsinline></video>
                    <canvas id="addFaceCanvas" style="display: none;"></canvas>
                    <div class="camera-overlay">
                        <div class="face-guide"></div>
                    </div>
                </div>
                <div class="camera-controls">
                    <button type="button" class="btn btn-camera" onclick="startCamera()">
                        📷 Bật camera
                    </button>
                    <button type="button" class="btn btn-capture" onclick="capturePhoto()" style="display: none;">
                        📸 Chụp ảnh
                    </button>
                    <button type="button" class="btn btn-secondary" onclick="stopCamera()" style="display: none;">
                        ❌ Tắt camera
                    </button>
                </div>
            </div>

            <!-- Preview Section -->
            <div id="faceIdPreview" class="preview-container"></div>
        </div>
    </div>

    <div class="form-actions" style="display: flex; gap: 10px; margin-top: 20px;">
        <button type="button" class="btn btn-secondary" onclick="closeModal()" style="flex: 1;">
            ❌ Hủy
        </button>
        <button type="submit" class="btn btn-primary" style="flex: 2;">
            ✅ Thêm nhân viên
        </button>
    </div>
</form>

<style>

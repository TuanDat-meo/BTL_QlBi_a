        }
    }
</style>

<script>
    let cameraStream = null;
    let capturedImageBlob = null;

    function togglePassword(inputId) {
        const input = document.getElementById(inputId);
        input.type = input.type === 'password' ? 'text' : 'password';
    }

    function switchUploadMethod(method, event) {
        // Prevent default if event exists
        if (event) {
            event.preventDefault();

            // Update buttons
            document.querySelectorAll('#formThemNhanVien .upload-method-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
        }

        // Update sections
        const fileSection = document.getElementById('fileUploadSection');
        const cameraSection = document.getElementById('cameraUploadSection');

        if (method === 'file') {
            if (fileSection) fileSection.classList.add('active');
            if (cameraSection) cameraSection.classList.remove('active');
            stopCamera();
        } else {
            if (fileSection) fileSection.classList.remove('active');
            if (cameraSection) cameraSection.classList.add('active');
        }
    }

    function handleFileSelect(input) {
        const preview = document.getElementById('faceIdPreview');

        if (input.files && input.files[0]) {
            const file = input.files[0];

            // Validate file type
            if (!file.type.match('image/(jpeg|jpg|png)')) {
                alert('❌ Chỉ chấp nhận file JPG, JPEG, PNG');
                input.value = '';
                return;
            }

            // Validate file size (5MB)
            if (file.size > 5 * 1024 * 1024) {
                alert('❌ Kích thước file không được vượt quá 5MB');
                input.value = '';
                return;
            }

            const reader = new FileReader();
            reader.onload = function(e) {
                preview.innerHTML = `
                    <img src="${e.target.result}" alt="Face ID Preview">
                    <div class="preview-actions">
                        <button type="button" class="btn btn-secondary" onclick="clearPreview()">
                            🗑️ Xóa ảnh
                        </button>
                    </div>
                `;
            };
            reader.readAsDataURL(file);
        } else {
            preview.innerHTML = '';
        }
    }

    async function startCamera() {
        const video = document.getElementById('addFaceVideo');
        const btnStart = document.querySelector('.btn-camera');
        const btnCapture = document.querySelector('.btn-capture');
        const btnStop = document.querySelector('.btn-secondary');

        try {
            cameraStream = await navigator.mediaDevices.getUserMedia({
                video: {
                    facingMode: 'user',
                    width: { ideal: 640 },
                    height: { ideal: 480 }
                }
            });

            video.srcObject = cameraStream;

            // Update UI
            btnStart.style.display = 'none';
            btnCapture.style.display = 'inline-block';
            btnStop.style.display = 'inline-block';

        } catch (error) {
            console.error('Camera error:', error);
            alert('❌ Không thể truy cập camera: ' + error.message);
        }
    }

    function stopCamera() {
        if (cameraStream) {
            cameraStream.getTracks().forEach(track => track.stop());
            cameraStream = null;
        }

        const video = document.getElementById('addFaceVideo');
        video.srcObject = null;

        const btnStart = document.querySelector('.btn-camera');
        const btnCapture = document.querySelector('.btn-capture');
        const btnStop = document.querySelector('.btn-secondary');

        btnStart.style.display = 'inline-block';
        btnCapture.style.display = 'none';
        btnStop.style.display = 'none';
    }

    function capturePhoto() {
        const video = document.getElementById('addFaceVideo');
        const canvas = document.getElementById('addFaceCanvas');
        const preview = document.getElementById('faceIdPreview');

        canvas.width = video.videoWidth;
        canvas.height = video.videoHeight;

        const context = canvas.getContext('2d');
        context.drawImage(video, 0, 0);

        canvas.toBlob(function(blob) {
            capturedImageBlob = blob;

            const url = URL.createObjectURL(blob);
            preview.innerHTML = `
                <img src="${url}" alt="Captured Photo">
                <div class="preview-actions">
                    <button type="button" class="btn btn-secondary" onclick="retakePhoto()">
                        🔄 Chụp lại
                    </button>
                    <button type="button" class="btn btn-primary" onclick="confirmPhoto()">
                        ✅ Sử dụng ảnh này
                    </button>
                </div>
            `;
        }, 'image/jpeg', 0.95);
    }

    function retakePhoto() {
        const preview = document.getElementById('faceIdPreview');
        preview.innerHTML = '';
        capturedImageBlob = null;
    }

    function confirmPhoto() {
        if (capturedImageBlob) {
            // Create a File object from blob
            const file = new File([capturedImageBlob], 'face-capture.jpg', { type: 'image/jpeg' });

            // Create a DataTransfer to set the file input
            const dataTransfer = new DataTransfer();
            dataTransfer.items.add(file);

            const fileInput = document.getElementById('faceIdFileInput');
            fileInput.files = dataTransfer.files;

            stopCamera();

            // Switch to file method to show the uploaded image
            switchUploadMethod('file');
            handleFileSelect(fileInput);

            alert('✅ Đã chọn ảnh thành công!');
        }
    }

    function clearPreview() {
        const preview = document.getElementById('faceIdPreview');
        const fileInput = document.getElementById('faceIdFileInput');

        preview.innerHTML = '';
        fileInput.value = '';
        capturedImageBlob = null;
    }

    // Form submission
    document.getElementById('formThemNhanVien').addEventListener('submit', async function(e) {
        e.preventDefault();

        const formData = new FormData(this);

        // If using captured photo, ensure it's in the form data
        if (capturedImageBlob && !formData.get('FaceIDAnh')) {
            formData.append('FaceIDAnh', capturedImageBlob, 'face-capture.jpg');
        }

        try {
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '⏳ Đang xử lý...';

            const response = await fetch('/NhanVien/ThemNhanVien', {
                method: 'POST',
                body: formData
            });

            const result = await response.json();

            if (result.success) {
                alert('✅ ' + result.message);
                stopCamera();
                closeModal();
                location.reload();
            } else {
                alert('❌ ' + result.message);
                submitBtn.disabled = false;
                submitBtn.innerHTML = '✅ Thêm nhân viên';
            }
        } catch (error) {
            console.error('Error:', error);
            alert('❌ Có lỗi xảy ra: ' + error.message);
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.disabled = false;
            submitBtn.innerHTML = '✅ Thêm nhân viên';
        }
    });

    // Cleanup when modal closes
    window.addEventListener('beforeunload', function() {
        stopCamera();
    });
</script>